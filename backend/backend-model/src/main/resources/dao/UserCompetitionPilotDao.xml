<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog="" schema="${mainschema}" table="USERS_COMPETITIONS_PILOTS"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>UCP_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>UCP_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="filter">
            <Sentence>
                <![CDATA[
                    SELECT #COLUMNS#
                    FROM PILOTS P
                    LEFT JOIN (
                        SELECT UC.COMP_ID, PS.PIL_ID AS PIL, UC.USER_, UC.UC_ID, UCP.UCP_ID
                        FROM PILOTS PS
                        LEFT OUTER JOIN USERS_COMPETITIONS_PILOTS UCP ON PS.PIL_ID = UCP.PIL_ID
                        LEFT OUTER JOIN USERS_COMPETITIONS UC ON UCP.UC_ID = UC.UC_ID
                        #WHERE#)
                    T ON P.PIL_ID = T.PIL
                    #ORDER#;
                ]]>
            </Sentence>
        </Query>
    </Queries>
</JdbcEntitySetup>